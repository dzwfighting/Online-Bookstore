<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="http://at.alicdn.com/t/font_1309180_m0vigzfu7y.css">
    <style type="text/css">
        .bod1
        {
            /*background: -webkit-linear-gradient(to right, #f7797d, #FBD786, #C6FFDD);*/
            /*background-image: url(" 2558.jpg");*/
            /*background-size:cover;*/
            background: #aa4b6b;  /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #3b8d99, #6b6b83, #aa4b6b);  /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #3b8d99, #6b6b83, #aa4b6b); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        }
        .search-box
        {
            text-align: center;
	        width: 300px;
	        height: 200px;
	        margin: auto;
	        position: absolute;
	        top: 0;
	        left: 0;
	        right: 0;
	        bottom: 0;
        }
        #subBtn:hover{
            background-color:#aa4b6b;
        }
        #canBtn:hover{
            background-color:#3b8d99;
        }
        
       
 
    </style>
</head>
<body class="bod1">

<div class="search-box">
    <form action="/users/vip" method="POST">
      <label for="password">
          {{bookName}} is ${{price}}, are you sure to buy it?
          Please enter the password of your account if you are sure.
          <h6>{{message}}</h6>
          <input type="text" name="psd" id="password">
      </label>
      <button type="button" id="canBtn">Cancel</button>
      <button type="submit" id="subBtn">Purchase</button>
    </form>
</div>
</body>
<script>
    $(function(){
      var inputPass=$("input")
      $("#subBtn").click(function(){
          if(inputPass.val().trim().length===0){
              alert("Please provide a non-blank password.")
              return false
          }
      })
      var cancel=$("#canBtn")
      cancel.click(function(){
          window.location.href="/book/search"
      })
    });
</script>